<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"

    android:layout_centerHorizontal="true"
    tools:context=".ui.AddContactActivity">

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintCircleRadius="10dp"
        android:background="@drawable/ic_popup_format"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="47dp">

            <TextView
                android:id="@+id/username_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:paddingLeft="15dp"
                android:layout_marginTop="7dp"
                android:text="Username:"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_username"
                android:textColorHint="@drawable/bg_with_inner_shadow"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
               >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:shadowRadius="@integer/material_motion_duration_medium_1"
                    android:layout_height="25dp"
                    android:textSize="10sp"
                    android:paddingLeft="7dp"
                    android:hint="Your firstname" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/phone_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:text="Phone number:"
                android:textSize="12sp"
                android:layout_marginTop="80dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_phone"
                android:textColorHint="@drawable/bg_with_inner_shadow"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:shadowRadius="@integer/material_motion_duration_medium_1"
                    android:layout_height="25dp"
                    android:textSize="10sp"
                    android:paddingLeft="7dp"
                    android:hint="Your phone number" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/popup_btn_success"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/add_phone"
                android:textSize="12dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_btn_success"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="Validate" />

            <TextView
                android:layout_width="72dp"
                android:layout_height="22dp"
                android:layout_alignStart="@+id/popup_btn_success"
                android:layout_alignTop="@+id/popup_btn_success"
                android:layout_alignEnd="@+id/popup_btn_success"
                android:layout_alignBottom="@+id/popup_btn_success"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="13dp"
                android:text="Confimed"
                android:textColor="@color/material_dynamic_neutral_variant50"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/popup_btn_error"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/add_phone"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:focusable="auto"
                android:src="@drawable/ic_btn_error"
                android:text="Discard"
                android:textSize="12dp" />

            <TextView
                android:layout_width="57dp"
                android:layout_height="21dp"
                android:layout_alignStart="@+id/popup_btn_error"
                android:layout_alignTop="@+id/popup_btn_error"
                android:layout_alignEnd="@+id/popup_btn_error"
                android:layout_alignBottom="@+id/popup_btn_error"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:text="Discard"
                android:textColor="@color/material_dynamic_neutral_variant50"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>